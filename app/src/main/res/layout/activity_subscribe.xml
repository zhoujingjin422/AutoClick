<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/sub_top_back"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="40dp"
            android:src="@mipmap/icon_close"/>
        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_close"
            app:layout_constraintBottom_toBottomOf="@id/iv_close"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Restore Purchase"
            android:layout_marginStart="23dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/text_shape"/>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_back"
            android:layout_marginTop="-26dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="29dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="16dp">

                            <LinearLayout
                                android:id="@+id/ll_women"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginStart="16dp"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:id="@+id/iv_women"
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/icon_women"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_marginStart="12dp"
                                    android:text="lucy"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/icon_star"
                                    android:layout_marginStart="10dp"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ll_women"
                                android:layout_marginStart="16dp"
                                android:textColor="#666666"
                                android:textSize="14sp"
                                android:text="It's really good. It's very convenient to use. The metronome and pacemaker are excellent. I recommend you to use~" />
                        </RelativeLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/icon_offer"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/detail_iamge"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="18dp"
                        android:layout_marginTop="14dp"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_marginTop="22dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Try us for 7 days-free!"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#99000000"
                        android:layout_marginTop="6dp"
                        android:layout_gravity="center_horizontal"
                        android:text="No commitment. Cancel anytime."/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="12dp">
                        <TextView
                            android:id="@+id/btn_get"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:text="Start Free Trial"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textAllCaps="false"
                            android:gravity="center"
                            android:background="@drawable/shape_button_next"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_next"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="24dp"/>
                    </FrameLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>