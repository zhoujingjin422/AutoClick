<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/tools">

    <data>

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">
            <View
                android:layout_width="match_parent"
                android:background="@mipmap/toolbar_back"
                android:layout_height="@dimen/status_bar_height"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@mipmap/icon_back"
                android:background="@mipmap/toolbar_back"
                app:title="Common settings"
                app:titleTextColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:text="Target size"/>
            <FrameLayout
                android:id="@+id/fl_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"/>
            <SeekBar
                android:id="@+id/sb_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="60"
                android:max="60"
                android:min="20"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:text="Controller bar size"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>
            <SeekBar
                android:id="@+id/sb_controller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="100"
                android:max="100"
                android:min="0"
                android:layout_marginTop="20dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large"
                android:layout_gravity="end"/>
        </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/adv_banner"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="14dp"
            android:background="#F2F4FE"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</layout>